{
  "name": "wikilens",
  "displayName": "WikiLens",
  "publisher": "lostintangent",
  "description": "Provides a page-centric wiki editing experience for GitHub repos",
  "version": "0.0.1",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.59.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lostintangent/wikilens.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension-web.js",
  "contributes": {
    "commands": [
      {
        "command": "wikilens.addWikiPage",
        "title": "Add Page",
        "category": "WikiLens",
        "icon": "$(add)"
      },
      {
        "command": "wikilens.deleteWikiPage",
        "title": "Delete Page",
        "category": "WikiLens"
      },
      {
        "command": "wikilens.openTodayPage",
        "title": "Open Today Page",
        "category": "WikiLens",
        "icon": "$(calendar)"
      },
      {
        "command": "wikilens.refreshWiki",
        "title": "Refresh",
        "category": "WikiLens",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "wikilens.addWikiPage",
          "when": "wikilens:isWikiWorkspace"
        },
        {
          "command": "wikilens.deleteWikiPage",
          "when": "false"
        },
        {
          "command": "wikilens.openTodayPage",
          "when": "wikilens:isWikiWorkspace"
        },
        {
          "command": "wikilens.refreshWiki",
          "when": "wikilens:isWikiWorkspace"
        }
      ],
      "view/title": [
        {
          "command": "wikilens.refreshWiki",
          "when": "view == wikilens.wiki",
          "group": "navigation@1"
        },
        {
          "command": "wikilens.openTodayPage",
          "when": "view == wikilens.wiki",
          "group": "navigation@2"
        },
        {
          "command": "wikilens.addWikiPage",
          "when": "view == wikilens.wiki",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "wikilens.addWikiPage",
          "when": "viewItem == wikilens.directory",
          "group": "inline@1"
        },
        {
          "command": "wikilens.addWikiPage",
          "when": "viewItem == wikilens.directory",
          "group": "basic@1"
        },
        {
          "command": "wikilens.deleteWikiPage",
          "when": "viewItem == wikilens.page",
          "group": "basic@1"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "wikilens.wiki",
          "name": "Wiki",
          "when": "wikilens:isWikiWorkspace"
        }
      ]
    },
    "configuration": {
      "title": "WikiLens",
      "properties": {
        "wikilens.enabled": {
          "default": true,
          "type": "boolean",
          "description": "Specifies whether to enable the wiki for the current workspace."
        },
        "wikilens.daily.directoryName": {
          "default": "Daily",
          "type": "string",
          "description": "Specifies the name of the directory that daily pages are organized within."
        },
        "wikilens.daily.titleFormat": {
          "default": "LL",
          "type": "string",
          "description": "Specifies the date format (using Moment.js syntax) that is used to for the title of daily pages."
        }
      }
    },
    "markdown.markdownItPlugins": true
  },
  "scripts": {
    "compile": "webpack",
    "package": "vsce package",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vsce": "^1.96.1",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "markdown-it-regex": "^0.2.0",
    "mobx": "^6.3.2",
    "moment": "^2.29.1",
    "title-case": "^3.0.3"
  }
}
